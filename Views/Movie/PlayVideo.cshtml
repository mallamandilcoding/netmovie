@{
    ViewData["Title"] = "Video Player";
    Layout = null;
    @* var videoUrl = ViewData["VideoUrl"] as string; // Get the video URL from the controller *@
    var videourl = ViewData["VideoUrl"] as string; // Get the video URL from the controller


}

<!-- Include Video.js CSS and JS -->

<head>
    <link href="https://vjs.zencdn.net/8.16.1/video-js.css" rel="stylesheet" />

</head>

<body>
    <h2>@ViewData["Title"]</h2>

    <!-- Video.js Player -->
    <video id="video-player" class="video-js vjs-default-skin" controls>
        <!-- Dynamically set the video source based on the controller parameter -->
        @* <source src="@Url.Action("Stream", "Movie", new { videourl = videourl })" type="application/x-mpegURL"> *@
        <source src="@videourl" type="application/x-mpegURL">

    </video>


    <script src="https://vjs.zencdn.net/8.16.1/video.min.js"></script>
    <script>
        // Initialize the Video.js player
        var player = videojs('video-player', {
            techOrder: ['html5']
        });
    </script>
</body>
